{
  "name": "purchaseboard-app",
  "version": "1.0.0",
  "description": "Purchaseboard application with Node.js server",
  "main": "functions/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:client emulate:functions",
    "dev:client": "vite",
    "emulate:functions": "firebase emulators:start --only functions",
    "build": "vite build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "deploy:hosting": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "express": "^4.19.2",
    "firebase": "^11.10.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.395.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-linkify": "^1.0.0-alpha",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.25.6",
    "firebase-tools": "^13.11.2",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "22"
  }
}
