rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

     // Helper functions (no changes here)
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    function hasRole(role) {
      return request.auth != null && getUserData(request.auth.uid).roles.hasAny([role]);
    }

    // Rules for the 'users' collection itself
    match /users/{userId} {
      // READ rules (no changes here)
      allow read: if request.auth != null && (request.auth.uid == userId || hasRole('admin'));

      // --- ðŸ‘‡ æ ¸å¿ƒä¿®æ”¹é–‹å§‹ ---

      // WRITE rules
      // Admins can create and delete
      allow create, delete: if hasRole('admin');

      // UPDATE rule:
      // Allow an update if the user is an admin, OR if a regular user is updating their own document
      // WITHOUT changing the 'roles' or 'status' fields.
      allow update: if hasRole('admin') || 
                     (request.auth.uid == userId &&
                      request.resource.data.roles == resource.data.roles &&
                      request.resource.data.status == resource.data.status);
    }

    // Requirements rules (existing)
    match /requirements/{requirementId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    }

    // Tithing Subsystem Rules
    match /tithe/{taskId} {
      // Allow read/write access if the user is the treasurer, the assigned finance staff, or an admin.
      // The resource.data object refers to the document being accessed.
      allow read, write: if request.auth != null && (
                           request.auth.uid == resource.data.treasurerUid ||
                           request.auth.uid == resource.data.financeStaffUid ||
                           hasRole('admin')
                         );

      // Rules for the 'dedications' subcollection
      match /dedications/{dedicationId} {
        // Inherit the same logic: access is granted if the user has access to the parent task document.
        // We use get() to check the parent document's data.
        allow read, write: if request.auth != null && (
                           get(/databases/$(database)/documents/tithe/$(taskId)).data.treasurerUid == request.auth.uid ||
                           get(/databases/$(database)/documents/tithe/$(taskId)).data.financeStaffUid == request.auth.uid ||
                           hasRole('admin')
                         );
      }
    }
  }
}